<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_chat_bar_circleImageview"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:cropToPadding="true"
        android:src="@drawable/shortcut_user"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/custom_chat_bar_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/custom_chat_bar_circleImageview"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:text="Username"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_chat_bar_last_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/custom_chat_bar_username"
        android:layout_alignStart="@+id/custom_chat_bar_username"

        android:layout_below="@+id/custom_chat_bar_username"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="last seen" />

</RelativeLayout>