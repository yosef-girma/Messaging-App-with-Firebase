<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.orit.app.whatsapp.Activity.LoginActivity">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_form"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="403dp"
        android:maxWidth="100dp"
        android:src="@drawable/ic_app_shot_round" />

    <LinearLayout

        android:id="@+id/login_form"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_centerVertical="true"
        >

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="85dp"

            >

            <android.support.design.widget.TextInputEditText

                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/mail_envelope_symbol"
                android:hint="Email ..."
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:passwordToggleEnabled="true"
            >

            <android.support.design.widget.TextInputEditText
               android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password..."
                android:drawableLeft="@drawable/icon_lock"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

       <Button
           android:id="@+id/login_bnt"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="25dp"
           android:text="Sign In"/>

        <TextView

            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password ?"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            />
        <TextView
            android:id="@+id/request_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:text="Need Account? Sign up here"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or sign in via phone"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center">

        </TextView>
        <Button
            android:id="@+id/phone_auth_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            android:text="  Phone "/>
    </LinearLayout>



</RelativeLayout>
